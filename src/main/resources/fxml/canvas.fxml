                           <image>
                              <Image url="@../images/bin.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <styleClass>
                        <String fx:value="bg-purple" />
                        <String fx:value="rounded" />
                     </styleClass>
                  </Button>
               </children>
            </Pane>
            <Pane prefHeight="81.0" prefWidth="590.0">
               <children>
                  <Button fx:id="menuButton" layoutY="-11.0" mnemonicParsing="false" onAction="#onDisplayMenu" prefHeight="75.0" prefWidth="95.0">
