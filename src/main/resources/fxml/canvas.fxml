<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<HBox prefHeight="720.0" prefWidth="1000.0" styleClass="bg-light-blue"
  stylesheets="@../css/stylesheet.css" xmlns="http://javafx.com/javafx/18"
  xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="nz.ac.auckland.se206.controllers.CanvasController">
  <children>
    <VBox alignment="CENTER" prefHeight="720.0" prefWidth="630.0" spacing="20.0"
      stylesheets="@../css/stylesheet.css">
      <children>
        <Label alignment="CENTER" layoutX="124.0" layoutY="14.0" prefHeight="61.0" prefWidth="390.0"
          styleClass="text-purple" text="Quick, Draw! SE206  Edition" textAlignment="CENTER">
          <font>
            <Font name="Bauhaus 93" size="29.0"/>
          </font>
        </Label>
        <Label fx:id="wordLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="28.0"
          prefWidth="229.0" styleClass="text-purple" text="Word">
          <font>
            <Font name="Segoe UI" size="35.0"/>
          </font>
        </Label>
        <HBox alignment="CENTER" prefHeight="46.0" prefWidth="668.0">
          <children>
            <Label fx:id="timerLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="35.0"
              prefWidth="36.0" styleClass="text-purple" text="60">
              <font>
                <Font size="24.0"/>
              </font>
            </Label>
          </children>
        </HBox>
        <HBox alignment="CENTER" prefHeight="316.0" prefWidth="590.0">
          <children>
            <Pane maxWidth="-Infinity" prefHeight="294.0" prefWidth="475.0"
              styleClass="drawing-canvas">
              <children>
                <Canvas fx:id="canvas" height="296.0" layoutY="4.0" styleClass="drawing-canvas"
                  width="475.0">
                  <cursor>
                    <Cursor fx:constant="HAND"/>
                  </cursor>
                </Canvas>
                <Button fx:id="startDrawButton" layoutX="156.0" layoutY="121.0"
                  mnemonicParsing="false" onAction="#onStartDraw" prefHeight="63.0"
                  prefWidth="164.0" text="Let's Draw!!">
                  <styleClass>
                    <String fx:value="bg-purple"/>
                    <String fx:value="text-white"/>
                    <String fx:value="rounded"/>
                  </styleClass>
                  <font>
                    <Font name="Segoe UI" size="22.0"/>
                  </font>
                </Button>
              </children>
            </Pane>
          </children>
        </HBox>
        <Pane prefHeight="90.0" prefWidth="590.0">
          <children>
            <Button fx:id="saveImageButton" layoutX="158.0" layoutY="1.0" mnemonicParsing="false"
              onAction="#onSaveImage" prefHeight="63.0" prefWidth="95.0" text="Save">
              <styleClass>
                <String fx:value="bg-purple"/>
                <String fx:value="text-white"/>
                <String fx:value="rounded"/>
              </styleClass>
              <font>
                <Font name="Segoe UI" size="18.0"/>
              </font>
            </Button>
            <Button fx:id="brushButton" contentDisplay="RIGHT" disable="true" layoutX="410.0"
              layoutY="1.0" mnemonicParsing="false" onAction="#onSwitchToBrush" prefHeight="63.0"
              prefWidth="95.0">
              <graphic>
                <ImageView fitHeight="50.0" fitWidth="45.0" pickOnBounds="true"
                  preserveRatio="true">
                  <image>
                    <Image url="@../images/pencil.png"/>
                  </image>
                </ImageView>
              </graphic>
              <styleClass>
                <String fx:value="bg-purple"/>
                <String fx:value="rounded"/>
              </styleClass>
            </Button>
            <Button fx:id="eraserButton" contentDisplay="RIGHT" disable="true" layoutX="285.0"
              layoutY="1.0" mnemonicParsing="false" onAction="#onSwitchToEraser" prefHeight="63.0"
              prefWidth="95.0">
              <graphic>
                <ImageView fitHeight="44.0" fitWidth="54.0" pickOnBounds="true"
                  preserveRatio="true">
                  <image>
                    <Image url="@../images/eraser.png"/>
                  </image>
                </ImageView>
              </graphic>
              <styleClass>
                <String fx:value="bg-purple"/>
                <String fx:value="rounded"/>
              </styleClass>
            </Button>
            <Button fx:id="clearButton" contentDisplay="RIGHT" disable="true" layoutX="36.0"
              layoutY="1.0" mnemonicParsing="false" onAction="#onClear" prefHeight="63.0"
              prefWidth="95.0">
              <graphic>
                <ImageView fitHeight="35.0" fitWidth="33.0" pickOnBounds="true"
                  preserveRatio="true">
                  <image>
                    <Image url="@../images/bin.png"/>
                  </image>
                </ImageView>
              </graphic>
              <styleClass>
                <String fx:value="bg-purple"/>
                <String fx:value="rounded"/>
              </styleClass>
            </Button>
          </children>
        </Pane>
        <Pane prefHeight="97.0" prefWidth="532.0">
          <children>
            <Button fx:id="menuButton" layoutY="-11.0" mnemonicParsing="false"
              onAction="#onDisplayMenu" prefHeight="100.0" prefWidth="100.0">
              <graphic>
                <ImageView fitHeight="59.0" fitWidth="77.0" pickOnBounds="true"
                  preserveRatio="true">
                  <image>
                    <Image url="@../images/home.png"/>
                  </image>
                </ImageView>
              </graphic>
              <styleClass>
                <String fx:value="bg-purple"/>
                <String fx:value="rounded"/>
              </styleClass>
            </Button>
            <Label fx:id="resultLabel" alignment="CENTER" layoutX="310.0" layoutY="-9.0"
              prefHeight="90.0" prefWidth="325.0" styleClass="text-purple">
              <font>
                <Font name="Segoe UI" size="34.0"/>
              </font>
            </Label>
          </children>
        </Pane>

      </children>
      <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
      </padding>
    </VBox>
    <Pane prefHeight="747.0" prefWidth="472.0" stylesheets="@../css/stylesheet.css">
      <HBox.margin>
        <Insets right="15.0"/>
      </HBox.margin>
      <children>
        <Label alignment="CENTER" contentDisplay="CENTER" layoutX="36.0" layoutY="80.0"
          styleClass="text-purple" text="Predictions:">
          <font>
            <Font name="Bauhaus 93" size="49.0"/>
          </font>
        </Label>
        <ListView fx:id="predictionList0" layoutX="6.0" layoutY="149.0" prefHeight="195.0"
          prefWidth="402.0" stylesheets="@../css/stylesheet.css">
          <styleClass>
            <String fx:value="list-cell"/>
            <String fx:value="bg-light-blue"/>
            <String fx:value="top-3-list"/>
          </styleClass>
        </ListView>
        <ListView fx:id="predictionList1" layoutX="36.0" layoutY="306.0" prefHeight="312.0"
          prefWidth="269.0" stylesheets="@../css/stylesheet.css">
          <styleClass>
            <String fx:value="bg-light-blue"/>
            <String fx:value="list-cell"/>
            <String fx:value="list-default"/>
            <String fx:value="top-10-list"/>
          </styleClass>
        </ListView>
        <Button fx:id="newGameButton" layoutX="215.0" layoutY="631.0" mnemonicParsing="false"
          onAction="#onNewGame" prefHeight="75.0" prefWidth="199.0" text="Start New Game">
          <font>
            <Font name="Segoe UI" size="23.0"/>
          </font>
          <styleClass>
            <String fx:value="bg-purple"/>
            <String fx:value="text-white"/>
            <String fx:value="rounded"/>
          </styleClass>
        </Button>
      </children>
    </Pane>
  </children>
</HBox>
