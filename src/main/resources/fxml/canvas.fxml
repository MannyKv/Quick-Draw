                <ImageView fitHeight="50.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                    <Image url="@../images/pencil.png" />
                  </image>
                </ImageView>
              </graphic>
              <styleClass>
                <String fx:value="bg-purple" />
                <String fx:value="rounded" />
              </styleClass>
            </Button>
            <Button fx:id="eraserButton" contentDisplay="RIGHT" disable="true" layoutX="285.0" layoutY="1.0" mnemonicParsing="false" onAction="#onSwitchToEraser" prefHeight="63.0" prefWidth="95.0">
              <graphic>
                <ImageView fitHeight="44.0" fitWidth="54.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                    <Image url="@../images/eraser.png" />
                  </image>
                </ImageView>
              </graphic>
              <styleClass>
                <String fx:value="bg-purple" />
                <String fx:value="rounded" />
              </styleClass>
            </Button>
            <Button fx:id="clearButton" contentDisplay="RIGHT" disable="true" layoutX="36.0" layoutY="1.0" mnemonicParsing="false" onAction="#onClear" prefHeight="63.0" prefWidth="95.0">
              <graphic>
                <ImageView fitHeight="35.0" fitWidth="33.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                    <Image url="@../images/bin.png" />
                  </image>
                </ImageView>
              </graphic>
              <styleClass>
                <String fx:value="bg-purple" />
                <String fx:value="rounded" />
              </styleClass>
            </Button>
          </children>
        </Pane>
      <Button fx:id="menuButton" layoutX="14.0" layoutY="606.0" mnemonicParsing="false" onAction="#onDisplayMenu" prefHeight="100.0" prefWidth="100.0">
        <graphic>
          <ImageView fitHeight="61.0" fitWidth="61.0" pickOnBounds="true" preserveRatio="true">
            <image>
              <Image url="@../images/home.png" />
            </image>
          </ImageView>
        </graphic>
        <styleClass>
          <String fx:value="bg-purple" />
          <String fx:value="rounded" />
        </styleClass>
      </Button>
      <Label fx:id="resultLabel" alignment="CENTER" layoutX="164.0" layoutY="606.0" prefHeight="90.0" prefWidth="560.0" styleClass="text-purple">
        <font>
          <Font name="Segoe UI" size="53.0" />
        </font>
      </Label>
         </children>
      </Pane>
    <Pane prefHeight="720.0" prefWidth="421.0" stylesheets="@../css/stylesheet.css">
      <HBox.margin>
        <Insets right="15.0" />
      </HBox.margin>
      <children>
        <Label alignment="CENTER" contentDisplay="CENTER" layoutX="49.0" layoutY="133.0" styleClass="text-purple" text="Predictions:">
          <font>
            <Font name="Segoe UI Bold" size="39.0" />
          </font>
        </Label>
        <ListView fx:id="predictionList0" layoutX="49.0" layoutY="184.0" prefHeight="159.0" prefWidth="369.0" stylesheets="@../css/stylesheet.css">
          <styleClass>
            <String fx:value="list-cell" />
            <String fx:value="bg-light-blue" />
            <String fx:value="top-3-list" />
          </styleClass>
        </ListView>
        <ListView fx:id="predictionList1" layoutX="54.0" layoutY="312.0" prefHeight="254.0" prefWidth="335.0" stylesheets="@../css/stylesheet.css">
          <styleClass>
            <String fx:value="bg-light-blue" />
            <String fx:value="list-cell" />
            <String fx:value="list-default" />
          </styleClass>
        </ListView>
        <Button fx:id="newGameButton" layoutX="202.0" layoutY="631.0" mnemonicParsing="false" onAction="#onNewGame" prefHeight="75.0" prefWidth="218.0" text="Start New Game">
          <font>
            <Font name="Segoe UI Bold" size="23.0" />
          </font>
          <styleClass>
            <String fx:value="bg-purple" />
            <String fx:value="text-white" />
            <String fx:value="rounded" />
          </styleClass>
        </Button>
      </children>
    </Pane>
  </children>
</HBox>
