                        <Font name="Bauhaus 93" size="23.0" />
                     </font>
                     <styleClass>
                        <String fx:value="bg-purple" />
                        <String fx:value="text-white" />
                        <String fx:value="rounded" />
                     </styleClass>
                  </Button>
               </children>
            </Pane>
      
        </children>
        <padding>
          <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
      </VBox>
      <Pane prefHeight="747.0" prefWidth="472.0" stylesheets="@../css/stylesheet.css">
         <HBox.margin>
            <Insets right="15.0" />
         </HBox.margin>
